#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# fail fast
set -e

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

INSTALL_DIR="$BUILD_DIR/.heroku/vendor/app-search"
PROFILE_PATH="$BUILD_DIR/.profile.d/elasticsearch.sh"

mkdir -p $INSTALL_DIR
mkdir -p $(dirname $PROFILE_PATH)
mkdir -p $CACHE_DIR

indent() {
  sed -u 's/^/       /'
}

if [ ! -d $CACHE_DIR/app-search-7.5.0 ]; then
	echo "Fetching and installing App Search..." | indent
	cd $CACHE_DIR
	curl -sOL "https://artifacts.elastic.co/downloads/app-search/app-search-7.5.0.tar.gz"
	tar zxf "app-search-7.5.0.tar.gz"
	cp -r $CACHE_DIR/app-search-7.5.0/* $INSTALL_DIR/
else
	echo "Installing App Search from cache..." | indent
	cp -r $CACHE_DIR/app-search-7.5.0/*  $INSTALL_DIR/
fi

cat <<EOF >> $PROFILE_PATH
export PATH=/app/.heroku/vendor/app-search/bin:\$PATH
EOF

echo "App Search installed successfully!" | indent
